/* pages/index/index.wxss */

.search_box {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
  background-color: #0692e4;
  height: 150rpx;
}
.placeholder-class {
  color: #fff;
}
.top_title {
  color: #fff;
  background-color: #0692e4;
  font-family: 'Courier New', Courier, monospace;
  font-size: 38rpx;
  display: block;
  padding: 20rpx;
  text-align: center;
}
.search {
  display: block;
  font-size: 30rpx;
  padding: 10rpx 20rpx;
  margin-left: 20rpx;
  color: #fff;
  border: 4rpx #fff solid;
  width: 100%;
  border-radius: 30rpx;
}
.search_btn {
  width: 180rpx;
  height: 80rpx;
  color: #fff;
  font-size: 36rpx;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  line-height: 80rpx;
  margin-left: 20px;
}
.text_box {
  margin-top: 20rpx;
  padding: 0 20rpx;
}
.text_list {
  border-bottom: 1rpx solid rgba(0,0,0,0.1);
  height: 100rpx;
  display: flex;
  flex-direction: column;
  padding: 5rpx;
}
.text_list .author {
  color: #ccc;
  font-size: 25rpx;
  margin-top: 5rpx;
}
.text_list .title {
  color: #333;
  font-size: 33rpx;
}
.err {
  font-size: 30rpx;
  color: #333;
  text-align: center;
  padding: 25rpx;
}
/* pages/index/index.wxss */

.search_box {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  background-color: #0692e4;
  height: 300rpx;
}
.placeholder-class {
  color: #fff;
}
.title {
  color: #fff;
  font-family: 'Courier New', Courier, monospace;
  font-size: 38rpx;
  display: block;
  padding: 35rpx;
  margin-bottom: 10rpx;
}
.search {
  display: block;
  font-size: 30rpx;
  padding: 10rpx 20rpx;
  color: #fff;
  border: 4rpx #fff solid;
  width: 90%;
  border-radius: 30rpx;
}
.text_box {
  margin-top: 20rpx;
  padding: 0 20rpx;
}